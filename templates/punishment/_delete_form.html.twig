<form method="post" action="{{ path('punishment_delete', {'id': punishment.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette sanction ?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ punishment.id) }}">
    <button class="btn btn-danger btn-sm"><i class="bi bi-trash-fill"></i>Supprimer</button>
</form>
