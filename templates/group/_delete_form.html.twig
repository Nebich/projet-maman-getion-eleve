<form method="post" action="{{ path('group_delete', {'id': group.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette classe ?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ group.id) }}">
    <button class="btn btn-danger btn-sm"><i class="bi bi-trash-fill"></i> Supprimer</button>
</form>
